# Production Environment Variables for Render (SQLite)
# Copy these to your Render dashboard

SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=.onrender.com,your-app-name.onrender.com
DJANGO_SETTINGS_MODULE=gate_prep.settings
PYTHONUNBUFFERED=1

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=3600
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# SQLite Configuration (no DATABASE_URL needed)
# SQLite database will be stored on persistent disk
